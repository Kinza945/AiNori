# Телеграм бот
BOT_TOKEN=your_bot_token

# Shikimori OAuth
SHIKIMORI_CLIENT_ID=your_client_id
SHIKIMORI_CLIENT_SECRET=your_client_secret
SHIKIMORI_REDIRECT_URI=https://your-domain.tld/oauth/callback

# Шифрование токенов (генерируйте: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_SECRET=

# База и кэш
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/ainori
REDIS_URL=redis://redis:6379/0

# Вебхуки (для разработки оставьте пустым — будет использоваться polling)
WEBHOOK_URL=https://your-domain.tld
WEBHOOK_PATH=/telegram/webhook
WEBHOOK_SECRET=use_a_random_string
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
